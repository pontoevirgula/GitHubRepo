<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkNavyBlue">

    <View
        android:id="@+id/banner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/pineGreen"
        app:layout_constraintDimensionRatio="16:16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/tab_1"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="36dp"
        android:background="@color/navy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/banner" />

    <View
        android:id="@+id/tab_2"
        android:layout_width="90dp"
        android:layout_height="20sp"
        android:layout_marginStart="25dp"
        android:background="@color/navy"
        app:layout_constraintStart_toEndOf="@id/tab_1"
        app:layout_constraintTop_toTopOf="@id/tab_1" />

    <View
        android:id="@+id/tab_3"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginStart="25dp"
        android:background="@color/navy"
        app:layout_constraintStart_toEndOf="@id/tab_2"
        app:layout_constraintTop_toTopOf="@id/tab_1" />

    <View
        android:id="@+id/search"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="25dp"
        android:background="@color/navy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tab_3"
        app:layout_constraintTop_toTopOf="@id/tab_1" />

    <View
        android:id="@+id/banner_title"
        android:layout_width="138dp"
        android:layout_height="16dp"
        android:layout_marginBottom="50dp"
        android:background="@color/navy"
        app:layout_constraintBottom_toBottomOf="@id/banner"
        app:layout_constraintStart_toStartOf="@id/tab_1"
        app:layout_constraintTop_toTopOf="@id/banner" />

    <View
        android:id="@+id/banner_title2"
        android:layout_width="100dp"
        android:layout_height="12dp"
        android:layout_marginTop="16dp"
        android:background="@color/navy"
        app:layout_constraintStart_toStartOf="@id/banner_title"
        app:layout_constraintTop_toBottomOf="@id/banner_title" />

    <View
        android:id="@+id/banner_title3"
        android:layout_width="138dp"
        android:layout_height="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/navy"
        app:layout_constraintStart_toStartOf="@id/banner_title"
        app:layout_constraintTop_toBottomOf="@id/banner_title2" />

    <View
        android:id="@+id/indicator"
        android:layout_width="41dp"
        android:layout_height="7dp"
        android:layout_marginBottom="16dp"
        android:background="@color/navy"
        app:layout_constraintBottom_toBottomOf="@id/banner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/category"
        android:layout_width="110dp"
        android:layout_height="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/navy"
        app:layout_constraintStart_toStartOf="@id/tab_1"
        app:layout_constraintTop_toBottomOf="@id/banner" />

    <View
        android:id="@+id/see_all"
        android:layout_width="55dp"
        android:layout_height="12dp"
        android:layout_marginEnd="16dp"
        android:background="@color/navy"
        app:layout_constraintBottom_toBottomOf="@id/category"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/category" />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@id/category"
        app:layout_constraintTop_toBottomOf="@id/category">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/navy"
            app:cardCornerRadius="16dp" />

        <View
            android:id="@+id/name_offer"
            android:layout_width="50dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@color/navy" />

        <View
            android:id="@+id/value1"
            android:layout_width="90dp"
            android:layout_height="14dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@color/navy"
            app:layout_constraintEnd_toEndOf="@id/card_view"
            app:layout_constraintStart_toStartOf="@id/card_view"
            app:layout_constraintTop_toBottomOf="@id/card_view" />

        <View
            android:id="@+id/value2"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@color/navy"
            app:layout_constraintEnd_toEndOf="@id/card_view"
            app:layout_constraintStart_toStartOf="@id/card_view"
            app:layout_constraintTop_toBottomOf="@id/card_view" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/linear1"
        app:layout_constraintTop_toBottomOf="@id/category">

        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/navy"
            app:cardCornerRadius="16dp" />

        <View
            android:layout_width="60dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@color/navy"
            app:layout_constraintEnd_toEndOf="@id/card_view"
            app:layout_constraintStart_toStartOf="@id/card_view"
            app:layout_constraintTop_toBottomOf="@id/card_view" />

        <View
            android:layout_width="90dp"
            android:layout_height="14dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@color/navy"
            app:layout_constraintEnd_toEndOf="@id/card_view"
            app:layout_constraintStart_toStartOf="@id/card_view"
            app:layout_constraintTop_toBottomOf="@id/card_view" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/linear2"
        app:layout_constraintTop_toBottomOf="@id/category">

        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/navy"
            app:cardCornerRadius="16dp" />

        <View
            android:layout_width="60dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@color/navy"
            app:layout_constraintEnd_toEndOf="@id/card_view"
            app:layout_constraintStart_toStartOf="@id/card_view"
            app:layout_constraintTop_toBottomOf="@id/card_view" />

        <View
            android:layout_width="90dp"
            android:layout_height="14dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@color/navy"
            app:layout_constraintEnd_toEndOf="@id/card_view"
            app:layout_constraintStart_toStartOf="@id/card_view"
            app:layout_constraintTop_toBottomOf="@id/card_view" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/linear3"
        app:layout_constraintTop_toBottomOf="@id/category">

        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/navy"
            app:cardCornerRadius="16dp" />

        <View
            android:layout_width="60dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@color/navy"
            app:layout_constraintEnd_toEndOf="@id/card_view"
            app:layout_constraintStart_toStartOf="@id/card_view"
            app:layout_constraintTop_toBottomOf="@id/card_view" />

        <View
            android:layout_width="90dp"
            android:layout_height="14dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@color/navy"
            app:layout_constraintEnd_toEndOf="@id/card_view"
            app:layout_constraintStart_toStartOf="@id/card_view"
            app:layout_constraintTop_toBottomOf="@id/card_view" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>