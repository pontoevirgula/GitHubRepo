<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.repositories.KotlinRepositoryActivity">

    <include
        android:id="@+id/include_loading"
        layout="@layout/include_loading"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        tools:listitem="@layout/adapter_repository" />

    <include
        android:id="@+id/include_empty_list"
        layout="@layout/include_empty_list"/>

    <include
        android:id="@+id/include_error"
        layout="@layout/include_error"/>

</androidx.appcompat.widget.LinearLayoutCompat>